# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_DEBUG=False

# Email Provider Selection (sendgrid, gmail, smtp)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (RECOMMENDED for production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.be
SENDGRID_FROM_NAME=Your Company Name

# Gmail API Configuration (for response tracking)
# Download credentials.json from Google Cloud Console
# Place in project root directory

# SMTP Configuration (fallback option)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# OpenAI Configuration (for AI-generated emails)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Campaign Settings
MAX_EMAILS_PER_PRACTICE=3
DAILY_EMAIL_LIMIT=100
EMAILS_PER_MINUTE=10

# Tracking Features
ENABLE_OPEN_TRACKING=True
ENABLE_CLICK_TRACKING=True

# Logging
LOG_LEVEL=INFO
